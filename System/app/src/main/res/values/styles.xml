<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.NoTitleBar.Fullscreen">
        <!-- Customize your theme here. -->
    </style>

    <style name="SettingTheme" parent="android:Theme.Material.NoActionBar.Fullscreen">
        <!--<item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
        <item name="android:colorPrimary">#204B55</item>
        <item name="android:colorBackground">#2E4B77</item>
        <!--<item name="android:windowAnimationStyle">@null</item>-->
    </style>


    <style name="AlertDialogStyle_Warning" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#CCCC66</item>
        <item name="android:textColor">#555555</item>
        <item name="android:textColorPrimary">#555555</item>
        <item name="windowMinWidthMajor">80%</item>
        <item name="windowMinWidthMinor">80%</item>
    </style>

    <style name="AlertDialogStyle_Info" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#002255</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="windowMinWidthMajor">80%</item>
        <item name="windowMinWidthMinor">80%</item>
    </style>

    <style name="AlertDialogStyle_Error" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#CC1111</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="windowMinWidthMajor">80%</item>
        <item name="windowMinWidthMinor">80%</item>
