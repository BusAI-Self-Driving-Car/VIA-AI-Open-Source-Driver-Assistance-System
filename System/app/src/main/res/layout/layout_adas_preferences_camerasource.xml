<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#002255"
    android:orientation="vertical">

    <!--==========================================================================-->
    <!--About Frame Source -->

    <TextView
        android:id="@+id/layout_adas_preferences_view_camerasource_FrameSourceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="2dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Frame Source Preference"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#222222"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/layout_adas_preferences_view_camerasource_CameraDeviceIdTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:text="Device Identify"
                android:textStyle="bold"/>

            <RadioGroup
                android:id="@+id/layout_adas_preferences_view_camerasource_CameraDeviceIdGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:layout_marginStart="15dp" >

                <RadioButton
                    android:id="@+id/layout_adas_preferences_view_camerasource_CameraDeviceId_0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Device Identify - 0"/>
                <RadioButton
                    android:id="@+id/layout_adas_preferences_view_camerasource_CameraDeviceId_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Device Identify - 1"/>
            </RadioGroup>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BB666666"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/layout_adas_preferences_view_camerasource_CameraPermutationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:text="Camera Permutation"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/layout_adas_preferences_view_camerasource_CameraPermutationGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:layout_marginStart="15dp">

                <RadioButton
                    android:id="@+id/layout_adas_preferences_FrameSourceTypeGroup_Camera_1in1_1x1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Camera 1-In-Frame (1x1)"/>
                <RadioButton
                    android:id="@+id/layout_adas_preferences_FrameSourceTypeGroup_Camera_2in1_1x2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Camera 2-In-Frame (1x2)"/>
                <RadioButton
                    android:id="@+id/layout_adas_preferences_FrameSourceTypeGroup_Camera_3in1_1x3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Camera 3-In-Frame (1x3)"/>
                <RadioButton
                    android:id="@+id/layout_adas_preferences_FrameSourceTypeGroup_Camera_4in1_1x4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Camera 4-In-Frame (1x4)"/>
                <RadioButton
                    android:id="@+id/layout_adas_preferences_FrameSourceTypeGroup_Camera_4in1_2x2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Camera 4-In-Frame (2x2)"/>
            </RadioGroup>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BB666666"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/layout_adas_preferences_view_camerasource_VideoRecordTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"
                android:text="Video Record"
                android:textStyle="bold"/>

            <CheckBox
                android:id="@+id/layout_adas_preferences_view_camerasource_ModuleToggle_VideoRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/layout_adas_preferences_view_camerasource_VideoPathPickButton"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:layout_weight="0.1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@null"
                android:src="@drawable/icon_file_directory"
                android:layout_gravity="center"
                android:alpha="0.8"/>

            <TextView
                android:id="@+id/layout_adas_preferences_view_camerasource_VideoRecordPathText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="0.9"
                android:gravity="center|left"
                android:textSize="14sp"
                android:text="" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>