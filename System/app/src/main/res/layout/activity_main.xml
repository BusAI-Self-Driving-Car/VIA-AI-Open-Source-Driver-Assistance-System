        <!--app:layout_constraintRight_toRightOf="@+id/layoutActivityAdas_guideline_vertical_30p"-->
        <!--/>-->


    <com.viatech.via_ai.UI.CalibrationErrorView
        android:id="@+id/CalibrationErrorView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">
    </com.viatech.via_ai.UI.CalibrationErrorView>

    <!--Progress Laoyut ,  This layout will overlap on the top of main layout when loading-->
    <com.viatech.via_ai.UI.LoadingWrapper
        android:id="@+id/layoutActivityAdas_LoadingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
    </com.viatech.via_ai.UI.LoadingWrapper>

</android.support.constraint.ConstraintLayout>
